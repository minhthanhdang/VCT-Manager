{
  "openapi": "3.0.1",
  "info": {
    "title": "Valorant Manager Player Profiles API",
    "description": "API for retrieving Valorant player information accross leagues and regions.",
    "version": "1.0.0"
  },
  "paths": {
    "/getPotentialProfiles": {
      "post": {
        "description": "Retrieve potential Valorant player profiles by specifying a list of required league and region for each position. There are five positions in a team, each will receive five different player profiles.",
        "operationId": "getPotentialPortfolios",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "requirements": {
                    "type": "array",
                    "minItems": 1,
                    "maxItems": 5,
                    "items": {
                      "type": "object",
                      "properties": {
                        "league": {
                          "type": "string",
                          "enum": [
                            "vct-challengers",
                            "vct-international",
                            "game-changers"
                          ]
                        },
                        "region": {
                          "type": "string",
                          "enum": [
                            "americas",
                            "emea",
                            "cn",
                            "apac",
                            "latam",
                            "las",
                            "lan",
                            "na",
                            "br",
                            "vn", 
                            "sea",
                            "kr",
                            "jp",
                            "sa"
                          ]
                        }
                      },
                      "required": ["league", "region"]
                    }
                  }
                }
              },
              "example": {
                "requirements": [
                  {"leauge": "vct-challengers", "region": "americas"},
                  {"leauge": "vct-challengers", "region": "emea"},
                  {"leauge": "vct-challengers", "region": "americas"},
                  {"leauge": "vct-challengers", "region": "apac"},
                  {"leauge": "vct-challengers", "region": "americas"}
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with potential player profiles",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/PlayerProfile"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/getPlayersDetailProfile": {
      "post": {
        "description": "Retrieve detailed Valorant player profiles by specifying a list of player IDs or player first names and last names.",
        "operationId": "getPlayersDetailProfile",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "playersInfo": {
                    "type": "array",
                    "minItems": 1,
                    "maxItems": 5,
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "description": "Player ID"
                        },
                        "first_name": {
                          "type": "string",
                          "description": "Player first name"
                        },
                        "last_name": {
                          "type": "string",
                          "description": "Player last name"
                        }
                      },
                      "oneOf": [
                        {"required": ["id"]},
                        {"required": ["first_name", "last_name"]}
                      ]
                    }
                  }
                }
              },
              "example": {
                "playersInfo": [
                  {"id": "107729648820931094", "first_name": "Kimmie", "last_name": "Laasner"},
                  {"id": "106724769775977160", "first_name": "Aaron", "last_name": "Leonhart"},
                  {"id": "3"},
                  {"first_name": "Abhirup Paul", "last_name": "Choudhury"}
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with potential player details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/PlayerDetail"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
